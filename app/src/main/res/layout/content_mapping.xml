<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:context="ca.mcgill.cim.soundmap.MappingActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/rec_badge"
            android:contentDescription="@string/rec_badge_front"
            android:background="@drawable/rec_badge_background"
            android:src="@mipmap/ic_action_rec_grey"
            android:scaleType="fitCenter"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_gravity="end|bottom">

        </ImageButton>

        <View
            android:id="@+id/volume_bar"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            android:layout_gravity="start|bottom" />

        <Button
            android:id="@+id/rec_button"
            android:background="@mipmap/ic_settings"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="64dp"
            android:layout_gravity="center_horizontal|bottom" />

    </fragment>
    
</LinearLayout>