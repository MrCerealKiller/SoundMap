<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Custom Theme Overrides -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="actionBarStyle">@style/AppTheme.NoActionBar</item>
    </style>

    <!-- No Action Bar -->
    <style
        name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Overlaid Action Bar -->
    <style
        name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <!-- Popup Action Bar -->
    <style
        name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light">
    </style>

    <!-- Custom Action Bar -->
    <style name="MyActionBar"
        parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/lightBlue</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
